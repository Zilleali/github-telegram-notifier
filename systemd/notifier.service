[Unit]
Description=GitHub Telegram Notifier
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/github-telegram-notifier
ExecStart=/home/ubuntu/github-telegram-notifier/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 7249
Restart=always

[Install]
WantedBy=multi-user.target
